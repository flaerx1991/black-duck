<section class="split-two-cols ">
    <div class="container-full  {{module.background_theme}}">
        <div class="content flex {{module.cols_aligment}}">
            <div class="image-col">
                <img src="{{module.column_image.url}}" alt="">
            </div>
            <div class="text-col">
                <p class="title">{{module.title}}</p>
                <p class="description">{{module.description}}</p>
                {% if module.action_button %}
                <a href="{{module.action_button.url}}" class="action-button">{{module.action_button.title}}</a>
                {% endif %}
            </div>
        </div>
    </div>
</section>